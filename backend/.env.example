# Server
PORT=3000
NODE_ENV=development

# Database
# Supabase Postgres (database only). Replace [YOUR-PASSWORD] before running.
# If you still get timeouts on port 5432, use Supabase "Connection Pooler" URL instead.
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.batlfpasbydwfwjtiikr.supabase.co:5432/postgres

# Optional (override defaults)
PGSSLMODE=require
PG_POOL_MAX=10
PG_CONNECTION_TIMEOUT_MS=10000
PG_IDLE_TIMEOUT_MS=30000

# Auth
JWT_SECRET=change_me_in_production
JWT_EXPIRES_IN=7d

# Password reset
RESET_TOKEN_EXPIRES_MINUTES=30
# Optional: only used to print a clickable password-reset link in dev logs.
# If omitted, the API returns the reset token in non-production for testing.
FRONTEND_RESET_URL=

# Optional dev seeding
SEED_ADMIN_EMAIL=admin@skilltrack.local
SEED_MENTOR_EMAIL=mentor@skilltrack.local
SEED_LEARNER_EMAIL=learner@skilltrack.local
SEED_DEFAULT_PASSWORD=Password123!

# Demo data (dev only)
SEED_DEMO_DATA=true
SEED_DEMO_PROGRAM_TITLE=Flutter Internship Track
SEED_DEMO_PROGRAM_DESCRIPTION=A guided track with milestones and tasks.

# Deadline alert notifications (server-generated)
DEADLINE_ALERTS_ENABLED=true
DEADLINE_ALERT_HOURS=24
DEADLINE_ALERT_INTERVAL_MINUTES=10
